<UserControl x:Class="SkypePlus.Controls.ItemOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkypePlus.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock FontWeight="ExtraLight" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="5,3" Background="#99000000" Text="{Binding FromDisplayName}" />
    </Grid>
</UserControl>
