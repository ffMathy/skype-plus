<Window x:Class="SkypePlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:SkypePlus.Helpers"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <ListBox Name="ListBoxMessages" ItemsSource="{Binding Messages}">
            <ListBox.Resources>
                <helpers:TimestampToReadableConverter x:Key="TimestampToReadableConverter" /> 
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{Binding FromDisplayName}" Grid.Column="0" />
                        <TextBlock Text="{Binding BodyXml}" Grid.Column="1" />
                        <TextBlock Text="{Binding TimeStamp, Converter={StaticResource TimestampToReadableConverter}}" Grid.Column="2" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
